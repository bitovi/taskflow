{
    "name": "Taskflow",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "postCreateCommand": "npm ci",
    "postStartCommand": "npm run db:setup",
    "postAttachCommand": "npm run dev",
    "forwardPorts": [3000],
    "portsAttributes": {
        "3000": {
            "label": "App",
            "onAutoForward": "openPreview"
        }
    },
    "containerEnv": {
        "NODE_ENV": "development"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode"
            ]
        }
    }
}