{
  "version": "2.0.0",
  "tasks": [
    // ------------------------
    // BUILD AND DEVELOPMENT TASKS
    // ------------------------
    // build project
    {
      "label": "build",
      "type": "shell",
      "command": "npm run build",
      "group": "build",
      "problemMatcher": []
    },
    // start preview server
    {
      "label": "start",
      "type": "shell",
      "command": "npm start",
      "isBackground": true,
      "problemMatcher": []
    },
    // run dev server
    {
      "label": "dev",
      "type": "shell",
      "command": "npm run dev",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "dependsOn": [
        "kill-port-3000"
      ]
    },
    // clear port 3000
    {
      "label": "kill-port-3000",
      "type": "shell",
      "command": "fuser -k 3000/tcp || true",
      "problemMatcher": []
    },
    // ------------------------
    // TESTING TASKS
    // ------------------------
    // run unit tests
    {
      "label": "test",
      "type": "shell",
      "command": "npm test",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    // run e2e tests
    {
      "label": "test:e2e",
      "type": "shell",
      "command": "npm run test:e2e",
      "group": "test",
      "problemMatcher": []
    },
    // run e2e tests in debug mode (browser logs visible in terminal)
    {
      "label": "test:e2e:debug",
      "type": "shell",
      "command": "npm run test:e2e:debug",
      "group": "test",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
    },
    // run linter
    {
      "label": "lint",
      "type": "shell",
      "command": "npm run lint",
      "problemMatcher": [
        "$eslint-stylish"
      ]
    },
    // ------------------------
    // SETUP AND DATABASE TASKS
    // ------------------------
    // full project setup
    {
      "label": "setup",
      "type": "shell",
      "command": "npm run setup",
      "problemMatcher": []
    },
    // setup database
    {
      "label": "db:setup",
      "type": "shell",
      "command": "npm run db:setup",
      "problemMatcher": []
    },
    // seed database
    {
      "label": "db:seed",
      "type": "shell",
      "command": "npm run db:seed",
      "problemMatcher": []
    },
    // reset database
    {
      "label": "db:reset",
      "type": "shell",
      "command": "npm run db:reset",
      "problemMatcher": []
    },
    // clear database
    {
      "label": "db:clear",
      "type": "shell",
      "command": "npm run db:clear",
      "problemMatcher": []
    },
    // ------------------------
    // DEBUGGING TASKS
    // ------------------------
    // open chrome with remote debugging
    {
      "label": "Debug Chrome Browser",
      "type": "shell",
      "command": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome",
      "args": [
        "--remote-debugging-port=9222",
        "--user-data-dir=remote-debug-profile"
      ],
      "isBackground": false,
      "problemMatcher": []
    },
    // check browser output via cdp-cli
    {
      "label": "Check Browser Output",
      "type": "shell",
      "command": "npm",
      "args": [
        "exec",
        "cdp-cli",
        "--",
        "--cdp-url",
        "http://localhost:9222",
        "console",
        "TaskFlow"
      ],
      "isBackground": false,
      "problemMatcher": []
    },
  ]
}